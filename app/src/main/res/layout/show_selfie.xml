<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageDisplay"
        android:layout_width="match_parent"
        android:layout_height="406dp"
        android:layout_margin="20dp"
        android:layout_marginBottom="60dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageDisplay"
        android:layout_alignRight="@+id/imageDisplay"
        android:layout_below="@+id/imageDisplay"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_marginTop="26dp"
        android:onClick="refuse"
        android:text="Refuse" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignLeft="@+id/imageDisplay"
        android:layout_alignStart="@+id/imageDisplay"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:onClick="approve"
        android:text="Approve" />
</RelativeLayout>